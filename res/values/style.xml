<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="TitleStyle" >
    <!--shaowColor阴影颜色shaowDx阴影水平偏移量shadowRadius阴影的范围 -->
     <item name="android:textSize">19.0sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#dd666666</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
</style>
<style name="textViewTitle" >
     <item name="android:textSize">20sp</item>
     <item name="android:textStyle">bold</item>
     <item name="android:textColor">#FFFFFF</item>
     <item name="android:layout_width">wrap_content</item>
     <item name="android:layout_height">40dip</item>
     <item name="android:layout_marginTop">20dip</item>
     <item name="android:layout_centerInParent">true</item>
</style>
